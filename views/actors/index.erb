<h1 class="title">Movie Catalog Deluxe</h1>

<div class="headers">
<h1>The Ultimate List of Actors</h1>
<h3><a href="/movies">Click Here for Movies</a></h3>

<h3>Search Actors by Name or Character:</h3>
<form action="/actors" method="post">
  <input type="text" name="query">
  <input type="submit" value="Search">
</form>

</div>
<table class="actortable">
  <tr>
    <th>Actor</th>
    <th>Number of Movies</th>

  </tr>

<% @actors.each do |actor| %>
  <tr>
      <td><a href="/actors/<%= actor["id"] %>"><%= actor['name'] %></a></td>
      <td><%= actor['count'] %></td>

  </tr>

<% end %>

</table>
  <h3>All of the actors/actresses that played <%= @actors[0]['character']%></h3>
